# ======================================
# OpenProject MCP Server - Production
# ======================================

# OpenProject Connection (REQUERIDO)
OPENPROJECT_URL=https://your-openproject-instance.com
OPENPROJECT_API_KEY=your-api-key-here
OPENPROJECT_PROXY=

# HTTP Server Configuration
HTTP_PORT=8000

# Security - IMPORTANTE: Cambiar en producción
HTTP_AUTH_ENABLED=true
HTTP_AUTH_USERNAME=admin
HTTP_AUTH_PASSWORD=changeme123

# CORS Configuration
CORS_ENABLED=true
# Para producción, especifica dominios permitidos separados por comas:
# CORS_ORIGINS=https://app1.com,https://app2.com
CORS_ORIGINS=*

# Rate Limiting
RATE_LIMIT=100/minute

# Compression
GZIP_ENABLED=true
GZIP_MIN_SIZE=1000

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
TEST_CONNECTION_ON_STARTUP=true
